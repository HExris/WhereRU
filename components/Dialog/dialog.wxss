/* components/Dialog/dialog.wxss */

.dialog_container {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5000;
  background-color: #777;
  height: 100vh;
  width: 100vw;
}

.dialog {
  position: absolute;
  z-index: 5001;
  width: 80%;
  max-width: 600rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  overflow: hidden;
}

.dialog-title {
  font-size: 18px;
  padding: 15px 15px 5px;
  color: #353535;
}

.dialog-content {
  padding: 15px 0;
  min-height: 40px;
  font-size: 50px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #fff;
}

.dialog-footer {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}

.dialog-btn {
  display: block;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  font-size: 29px;
}

.dialog-footer .dialog-btn:nth-of-type(1) {
  color: #eee;
}

button {
  background-color: transparent;
  border: none !important;
  font-size: 28px;
  color: #eee;
}

button::after {
  border: none;
}
