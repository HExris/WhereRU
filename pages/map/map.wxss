/* pages/map/map.wxss */

.map {
  width: 100vw;
  height: 100vh;
}

.position {
  position: fixed;
  z-index: 9999;
  left: 80rpx;
  bottom: 10vh;
  /* border: solid #fff 15rpx; */
  border-radius: 50%;
  /* box-shadow: 5px 6px 8px rgba(0, 0, 0, 0.4); */
  /* background-color: #fff;  */
}

.position::after{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-shadow: 5px 6px 8px rgba(0, 0, 0, 0.4);
}

.position cover-image{
  width: 100rpx;
  height: 100rpx;
}

.btn_group{
  position: fixed;
  z-index: 9999;
  right: 80rpx;
  bottom: 10vh;
  border-radius: 16rpx;
  display: flex;
  flex-direction:  column;
  /* height: 150rpx; */
  /* background-color: #fff; */
  text-align: center;
}

.btn_group cover-image{
  position: absolute;
  left: 0;
  top: 0;
  width: 90rpx!important;
  z-index: 10;
}

.btn{
  position: relative;
  flex: 1;
  width: 85rpx;
  height: 80rpx;
  z-index: 100;
}

